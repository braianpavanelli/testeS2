@if (ViewData["Friends"] != null && (ViewData["Friends"] as List<TesteS2IT.Models.Friend>).Count > 0)
{
    <table id="lending" class="table table-striped table-bordered dataTable no-footer" style="width: 100%;" role="grid" aria-describedby="example_info">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 256px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Nome</th>
                <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 256px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Endereço</th>
                <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 256px;" aria-sort="ascending" aria-label="Date: activate to sort column descending">Telefone</th>
                <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 256px;" aria-sort="ascending" aria-label="Date: activate to sort column descending">Email</th>
                <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 256px;" aria-sort="ascending" aria-label="Date: activate to sort column descending">Está com Jogo</th>
            </tr>
        </thead>


        @foreach (var item in ViewData["Friends"] as List<TesteS2IT.Models.Friend>)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.Mail
                </td>
                <td>
                    <span class="text-success">
                        <i class="fas fa-check"></i>
                    </span>
                </td>
            </tr>
        }


    </table>
}
else
{
        <div class="col-12"  style="min-width: 500px">
            <p class="text-secondary">
                Você não possui amigos com jogos emprestados!
            </p>
        </div>
}
<div clss="row">
    <a href="@Url.Action("Create","Friends")" title="Adicionar Amigo">
        <img src="~/Images/add_blue.png" alt="Adicionar Amigo" style="position: relative; float:right;height: 55px;margin-top: -41px;">
    </a>
    <a href="@Url.Action("Index","Friends")" title="Lista de Amigos">
        <img src="~/Images/list_red.png" alt="Lista de Amigos" style="position: relative; float:right;height: 49px;margin-top: -38px;">
    </a>
</div>

